{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jquery": true
  },
  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "no-use-before-define": ["error", { "functions": true, "classes": true }],
    "semi": 2
  }
}
